{
  "$schema": "https://json.schemastore.org/prettierrc.json",
  "tabWidth": 4,
  "printWidth": 120,
  "semi": true,
  "useTabs": true,
  "singleQuote": true,
  "jsxSingleQuote": true,
  "bracketSpacing": true,
  "endOfLine": "auto",
  "arrowParens": "always",
  "trailingComma": "es5",
  "proseWrap": "always",
  "tailwindFunctions": ["clsx", "cva"],
  "plugins": ["prettier-plugin-tailwindcss"],
  "tailwindConfig": "./tailwind.config.ts"
}
